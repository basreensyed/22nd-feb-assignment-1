n=int(input("enter number:"))
for i in range(n) :
    for j in range(i,n) :
        print(" ",end=" ")
    for j in range(i) :
        print("*",end=" ")
    for j in range(i+1) :   
        print("*",end=" ")
    print()
for i in range(n) :
    for j in range(1+i) :
        print(" ",end=" ")
    for j in range(i,n-1) :
        print("*",end=" ")
    for j in range(i,n) :
        print("*",end=" ")
    print()
